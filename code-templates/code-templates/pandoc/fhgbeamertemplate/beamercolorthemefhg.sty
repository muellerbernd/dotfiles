\mode<presentation>

% Color scheme definition
\RequirePackage[]{xcolor}
\definecolor{fhggreen}{rgb}{0.09,0.61,0.49}
\definecolor{fhggray}{rgb}{0.66,0.69,0.69}
\definecolor{fhgorange}{rgb}{0.95,0.58,0}
\definecolor{fhgblue}{rgb}{0.12,0.51,0.75}
\definecolor{fhgred}{rgb}{0.89,0,0.10}
\definecolor{fhglime}{rgb}{0.69,0.78,0}


% Settings
\setbeamercolor*{frametitle}{fg=black}
\setbeamercolor*{title page header}{fg=black}
\setbeamercolor*{author}{fg=black}
\setbeamercolor*{date}{fg=fhggray}

\setbeamercolor{itemize item}{fg=fhggreen}
\setbeamercolor{itemize subitem}{fg=fhggray}
\setbeamercolor{itemize subsubitem}{fg=fhggray}

\setbeamercolor{block title example}{fg=fhgblue, bg=fhgblue!10}
\setbeamercolor{block body example}{fg=fhgblue, bg=fhgblue!5}
\AtBeginEnvironment{exampleblock}{\setbeamercolor{itemize item}{fg=fhgblue}}

\setbeamercolor{block title alerted}{fg=fhgred, bg=fhgred!10}
\setbeamercolor{block body alerted}{fg=fhgred, bg=fhgred!5}
\AtBeginEnvironment{alertblock}{\setbeamercolor{itemize item}{fg=fhgred}}

\setbeamercolor{block title}{fg=fhggreen, bg=fhggreen!10}
\setbeamercolor{block body}{fg=fhggreen, bg=fhggreen!5}
\AtBeginEnvironment{block}{\setbeamercolor{itemize item}{fg=fhggreen}}

\mode
<all>